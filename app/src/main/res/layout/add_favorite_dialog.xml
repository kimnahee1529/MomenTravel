<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="16dp"
        android:text="관심사 등록"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="찾으시는 관심사가 없으신가요?"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="5dp"
        android:text="나만의 관심사를 등록해보세요!"
        android:textSize="12sp"/>


    <EditText
        android:id="@+id/et_plusFavorite1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:hint="관심사를 입력해주세요."
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_plusFavorite2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="관심사를 입력해 주세요."
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_plusEditFavorite2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/add"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_no"
            android:text="취소"
            android:background="@drawable/rounded_btn_cancel"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:layout_height="45dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="등록"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn_confirm"
            android:layout_marginStart="30dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="50dp"/>

</LinearLayout>