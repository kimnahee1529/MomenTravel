<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:text="관심사 등록"
        android:textStyle="bold"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="찾으시는 관심사가 없으신가요?"
        android:layout_marginTop="44dp"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="65dp"
        android:text="나만의 관심사를 등록해보세요!"
        android:textSize="12sp"/>


    <EditText
        android:id="@+id/et_plusFavorite1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:hint="관심사를 입력해주세요."
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_plusFavorite2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_plusFavorite1"
        app:layout_constraintStart_toStartOf="@id/et_plusFavorite1"
        android:hint="나만의 관심사를 등록해 보세요"
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_plusEditFavorite2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/add"
        app:layout_constraintTop_toBottomOf="@id/et_plusFavorite1"
        app:layout_constraintStart_toStartOf="@id/et_plusFavorite1"
        app:layout_constraintEnd_toEndOf="@id/et_plusFavorite1"
        android:layout_marginTop="25dp"
        android:visibility="visible"/>


    <Button
        android:id="@+id/btn_no"
        app:layout_constraintTop_toBottomOf="@+id/et_plusFavorite2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="취소"
        android:layout_width="120dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="등록"
        app:layout_constraintStart_toEndOf="@id/btn_no"
        app:layout_constraintTop_toTopOf="@id/btn_no"
        android:backgroundTint="#245399"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>